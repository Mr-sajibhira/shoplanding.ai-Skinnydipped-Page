

{% liquid
  assign laptop_padding_top = section.settings.laptop_top
  assign laptop_padding_bottom = section.settings.laptop_bottom
  assign mobail_padding_top = section.settings.mobail_top
  assign mobail_padding_bottom = section.settings.mobail_bottom
  assign bgcolor = section.settings.bgcolor
  assign border_color = section.settings.border_color
  assign border_width = section.settings.border_width
%}

<style>
  img {
    display: block;
    max-width: 100%;
    width: 100%;
    height: auto;
}
  .id_{{ section.id}}{
    background-color: {{bgcolor}};
    padding-top:{{laptop_padding_top}}px;
    padding-bottom:{{laptop_padding_bottom}}px;
  }

  .id_{{ section.id}} .container{
      border-color:{{border_color}};
      border-width:{{border_width}};
      border-style: solid;
      box-sizing: border-box;
      width:100%;
      margin:0px auto;
  }

    {% if section.settings.container == "container" %}
      .id_{{ section.id}} .container{
      max-width:1200px;    
    }
  {% elsif  section.settings.container == "container-full" %}
    .id_{{ section.id}} .container{
      max-width:100%;
      padding:0px 5%;
    }
  {% endif %}    
      

  

  @media(max-width:767px){
      .id_{{ section.id}}{
       padding-left:20px;
       padding-right:20px;
       padding-top:{{mobail_padding_top}}px;
       padding-bottom:{{mobail_padding_bottom}}px;
      }

    .id_{{ section.id}} .container{
      max-width:100%;
      padding:0px;
    }
     

  }
</style>

<section class="id_{{ section.id }}">
  <div class="container">
        {% for block in section.blocks %}

          {% case block.type %}
                {% when 'title' %}
              <style>
                .{{block.id}}.title{
                  font-size:{{block.settings.font_size}}px;
                  font-weight:{{block.settings.font_weight}};
                  line-height:{{block.settings.line_height}}px;
                  color:{{block.settings.textcolor}};
                  margin-bottom:{{block.settings.margin_bottom}}px !important;
                  text-align: {{block.settings.text_align}};
                  width:{{block.settings.width}}%;
                  margin:{{block.settings.align_content}}
                }
                 @media(max-width:767px){
                 .{{block.id}}.title{
                  font-size:{{block.settings.mobail_font_size}}px;
                  line-height:{{block.settings.mobail_line_height}}px;
                  margin-bottom:{{block.settings.mobail_margin_bottom}}px !important;
                  text-align: {{block.settings.mobail_text_align}};
                  width:{{block.settings.mobail_width}}%;
                  margin:{{block.settings.mobail_align_content}}
                }
                 }
              </style>

              <h3 class="title {{ block.id }}">{{ block.settings.title }}</h3>
              {% when 'richtext' %}
              <style>
                 .{{block.id}}{
                   font-size:{{block.settings.font_size}}px;
                   font-weight:{{block.settings.font_weight}};
                   line-height:{{block.settings.line_height}}px;
                   color:{{block.settings.textcolor}};
                   margin-bottom:{{block.settings.margin_bottom}}px !important;
                   text-align: {{block.settings.text_align}};
                   width:{{block.settings.width}}%;
                   margin:{{block.settings.align_content}}
                   }
                  .{{block.id}} ul{
                      padding-inline-start: 0;
                      margin-block: 0;
                  }
                  .{{block.id}} ul li{
                      list-style: none;
                      margin-bottom:10px;
                     display: flex;
                       }
                 .{{block.id}} ul li::before{
                   content: "\2713";
                   font-size:{{block.settings.font_size}}px;
                   font-weight:{{block.settings.font_weight}};
                   margin-right: 10px;
                   }
                
                  @media(max-width:767px){
                  .{{block.id}}{
                   font-size:{{block.settings.mobail_font_size}}px;
                   line-height:{{block.settings.mobail_line_height}}px;
                   margin-bottom:{{block.settings.mobail_margin_bottom}}px !important;
                   text-align: {{block.settings.mobail_text_align}};
                   width:{{block.settings.mobail_width}}%;
                   margin:{{block.settings.mobail_align_content}}
                 }
                 .{{block.id}} ul li::before{
                      font-size:{{block.settings.mobail_font_size}}px;
                  }
                    
                  }
              </style>
              <div class="{{ block.id }}">{{ block.settings.text }}</div>
                       {% when 'button' %}
              <style>
                .{{block.id}} .btn{
                  font-size:{{block.settings.font_size}}px;
                  font-weight:{{block.settings.font_weight}};
                  line-height:{{block.settings.font_size}}px;
                  color:{{block.settings.text_color}};
                  border-color:{{block.settings.border_color}};
                  border-width:{{block.settings.border_width}}px;
                  border-style:solid;
                  border-radius:{{block.settings.border_radius}}px;
                  background-color: {{block.settings.btn_color}};
                  margin-bottom:{{block.settings.margin_bottom}}px;
                  padding:{{block.settings.padding}};
                  transition-duration: .5s;
                  text-align: center;
                  text-decoration: none;
                  display: inline-block;
                }
                 .{{block.id}} .btn:hover{
                    background-color: {{block.settings.btn_color_hover}};
                    color:{{block.settings.text_color_hover}};
                    border-color:{{block.settings.border_color_hover}};
                 }
                 .{{block.id}}{
                    text-align: {{block.settings.text_align}};
                 }
                 @media(max-width:767px){
                 .{{block.id}} .btn{
                  font-size:{{block.settings.mobail_font_size}}px;
                  line-height:{{block.settings.mobail_font_size}}px;
                  margin-bottom:{{block.settings.mobail_margin_bottom}}px;
                  padding:{{block.settings.mobail_padding}};
                }
                .{{block.id}}{
                    text-align: {{block.settings.mobail_text_align}};
                 }
                 }
              </style>

              {% if block.settings.btnlink != blank %}
                <div class="{{ block.id }}">
                <a class="btn" href="{{ block.settings.btnlink }}">{{ block.settings.btntext }}</a>
                </div>
              {% endif %}

            
             {% when 'vs_section' %}
                 
             <style>
               .{{ block.id }} {
                 margin:0px 0px {{block.settings.vs_margin}}px 0px;
               }
                .{{ block.id }} .row{
                  display: flex;
                 flex-wrap: wrap;
                }
               .{{ block.id }} .row .vs_col{
                 max-width:20%;
                 width:100%;
                 box-sizing: border-box;
                 order: 2;
                 align-items: center;
                 display: flex;
               }
               .{{ block.id }} .row .vs_col img{
                 width:120px;
                 height:120px;
                 object-fit: contain;
                  display: block;
                 margin:0px auto;
               }
                .{{ block.id }} .row .vs_list_col{
                 max-width:40%;
                 width:100%;
                 box-sizing: border-box;
                 height:auto;
                }
               
               .{{ block.id }} .vs_list_box{
                 padding:{{block.settings.padding}};
                 box-sizing: border-box;
                 border-radius:{{block.settings.border-radius}};
                 background-color:{{block.settings.box_bg}};
                 height:100%;
               }
              .{{ block.id }} .vs_list_box img{
                  width:100%;
                  display: block;
                 max-width:{{block.settings.img_width}};
                 margin: 0px auto {{block.settings.img_margin}}px;
                 object-fit:{{block.settings.object_fit}};
                 aspect-ratio:{{block.settings.aspect_ratio}};
                }
               .{{ block.id }} .vs_list_box h3{
                  font-size:{{block.settings.title}}px;
                  line-height:120%;
                  font-weight: 700;
                  margin:0px 0px {{block.settings.title_margin}}px;
                  text-align: center;
               }
               .{{ block.id }} .vs_list_box .main_list_box{
                 padding:{{block.settings.list_padding}};
               }
              .{{ block.id }} .vs_list_box .main_list_box h4{
                  font-size:{{block.settings.text}}px;
                  line-height:120%;
                  font-weight: 700;
                  margin:0px 0px {{block.settings.text_margin}}px;
                 color:{{block.settings.list_title_color}};
              }
              .{{ block.id }} .vs_list_box .main_list_box p{
                  font-size:{{block.settings.des}}px;
                  line-height:150%;
                  font-weight: 400;
                  margin:0px 0px {{block.settings.des_margin}}px; 
                  display: inline-block;
                  color:{{block.settings.text_color}};
              }
              @media(max-width:767px){
                .{{ block.id }} {
                 margin:0px 0px {{block.settings.margin_vs_margin}}px 0px;
               }               
                .{{ block.id }} .row {gap:30px;}
                .{{ block.id }} .row .vs_col{ max-width:100%; }
                .{{ block.id }} .row .vs_list_col{ max-width:100%;}
               
               .{{ block.id }} .vs_list_box{
                 padding:{{block.settings.mobail_padding}};
                 border-radius:{{block.setting.mobail_border-radius}};
               }
                
              .{{ block.id }} .vs_list_box img{
                 max-width:{{block.settings.mobail_img_width}};
                 margin: 0px auto {{block.settings.mobail_img_margin}}px;
                }
                
               .{{ block.id }} .vs_list_box h3{
                  font-size:{{block.settings.mobail_title}}px;
                  margin:0px 0px {{block.settings.mabile_title_margin}}px;
               }
                
               .{{ block.id }} .vs_list_box .main_list_box{
                 padding:{{block.settings.mobail_list_padding}};
               }
              .{{ block.id }} .vs_list_box .main_list_box h4{
                  font-size:{{block.settings.mobail_text}}px;
                  margin:0px 0px {{block.settings.mobail_text_margin}}px;   
                  text-align: center;
              }
              .{{ block.id }} .vs_list_box .main_list_box p{
                  font-size:{{block.settings.mobail_des}}px;
                  margin:0px 0px {{block.settings.mobail_des_margin}}px;
                  text-align: center;
              }                
                
              }  
             </style>

            

                <div class="vs_section {{ block.id }}">
                  <div class="row">
                    <div class="vs_col">
                       {% if block.settings.img != blank %}
                           <img
                               src="{{ block.settings.img | image_url }}"
                               alt="{{ block.settings.img.alt }}"
                                 width="100%"
                                height="100%"
                                 >
                        {% endif %}
                    </div>

                    
                 {% for block in section.blocks %}
                    {% case block.type %}
                      {% when 'vs_list' %}
                        <style>
                          {% if block.settings.position_box == "left" %}
                            .{{ block.id }}{
                                order: 1;
                              }
                         {% elsif  block.settings.position_box == "right" %}
                            .{{ block.id }}{
                                order: 3;
                              }
                         {% endif %} 
                    

                      </style>
                         <div class="vs_list_col {{ block.id }}">
                            <div class="vs_list_box">
                               {% if block.settings.img != blank %}
                                 <img
                                    src="{{ block.settings.img | image_url }}"
                                    alt="{{ block.settings.img.alt }}"
                                    width="100%"
                                    height="100%"
                                 >
                             {% endif %}

                              <h3>{{ block.settings.title }}</h3>

                              <div class="main_list_box">
                                  <div class="list_box">
                                    {% if block.settings.text_1 != blank %}
                                     <h4>{{ block.settings.text_1 }}</h4>
                                    {% endif %}
                                    {% if block.settings.des_1 != blank %}
                                     <p>{{ block.settings.des_1 }}</p>
                                    {% endif %}
                                  </div>
                                  <div class="list_box">
                                    {% if block.settings.text_2 != blank %}
                                     <h4>{{ block.settings.text_2 }}</h4>
                                    {% endif %}
                                    {% if block.settings.des_2 != blank %}
                                     <p>{{ block.settings.des_2 }}</p>
                                    {% endif %}
                                  </div>
                                   <div class="list_box">
                                    {% if block.settings.text_3 != blank %}
                                     <h4>{{ block.settings.text_3 }}</h4>
                                    {% endif %}
                                    {% if block.settings.des_3 != blank %}
                                     <p>{{ block.settings.des_3 }}</p>
                                    {% endif %}
                                  </div>
                                   <div class="list_box">
                                    {% if block.settings.text_4 != blank %}
                                     <h4>{{ block.settings.text_4 }}</h4>
                                    {% endif %}
                                    {% if block.settings.des_4 != blank %}
                                     <p>{{ block.settings.des_4 }}</p>
                                    {% endif %}
                                  </div>
                                  <div class="list_box">
                                    {% if block.settings.text_5 != blank %}
                                     <h4>{{ block.settings.text_5 }}</h4>
                                    {% endif %}
                                    {% if block.settings.des_5 != blank %}
                                     <p>{{ block.settings.des_5 }}</p>
                                    {% endif %}
                                  </div>
                              </div>

                            
                             
                            </div>
                         </div>                                
                      {% endcase %}
                     {% endfor %}
                    
                  </div>
                </div>

          {% endcase %}
      {% endfor %} 
    
  </div>
</section>


