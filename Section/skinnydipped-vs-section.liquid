            "label": "List Description 3"
          },
          {
            "type": "text",
            "id": "text_4",
            "label": "List Title 4"
          },
          {
            "type": "textarea",
            "id": "des_4",
            "label": "List Description 4"
          },
          {
            "type": "text",
            "id": "text_5",
            "label": "List Title 5"
          },
          {
            "type": "textarea",
            "id": "des_5",
            "label": "List Description 5"
          }

        ]
      },
      {
        "type": "vs_section",
        "name": "VS Main Section",
        "limit": 1,
        "settings": [
          {
            "type": "image_picker",
            "id": "img",
